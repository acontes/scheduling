<?xml version="1.0" encoding="UTF-8"?>
<!-- @snippet-start-with-header Matlab_JobDescriptor_0-->
<!-- @snippet-start Matlab_JobDescriptor_1-->
<job xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="urn:proactive:jobdescriptor:dev ../../src/scheduler/src/org/ow2/proactive/scheduler/common/xml/schemas/jobdescriptor/dev/schedulerjob.xsd"
    xmlns="urn:proactive:jobdescriptor:dev" name="Matlab_job_simplest">
    <description>A simple Matlab job, which computes the roots of several polynomials</description>
    <taskFlow>
	<!-- @snippet-end Matlab_JobDescriptor_1-->
		<!-- @snippet-start Matlab_JobDescriptor_2-->
        <task name="root1" preciousResult="true">
            <description>Calculates the root of a polynomial</description>
            <selection>
                <script>
                    <file url="file:${pa.scheduler.home}/samples/scripts/selection/checkMatlab.js"/>
                </script>
            </selection>
			<!-- @snippet-end Matlab_JobDescriptor_2-->
			<!-- @snippet-start Matlab_JobDescriptor_3-->
            <javaExecutable class="org.ow2.proactive.scheduler.ext.matlab.MatlabTask">
                <parameters>
                    <parameter name="input" value="in=[1 0 3 -2 5 1];"/>
                    <parameter name="script" value="out=roots(in);"/>
                </parameters>
            </javaExecutable>
			<!-- @snippet-end Matlab_JobDescriptor_3-->
        </task>
        <task name="root2" preciousResult="true">
            <description>Calculates the root of a polynomial</description>
            <selection>
                <script>
                    <file url="file:${pa.scheduler.home}/samples/scripts/selection/checkMatlab.js"/>
                </script>
            </selection>
            <javaExecutable class="org.ow2.proactive.scheduler.ext.matlab.MatlabTask">
                <parameters>
                    <parameter name="input" value="in=[1 0 3 -2 5 2];"/>
                    <parameter name="script" value="out=roots(in);"/>
                </parameters>
            </javaExecutable>
        </task>
        <task name="root3" preciousResult="true">
            <description>Calculates the root of a polynomial</description>
            <selection>
                <script>
                    <file url="file:${pa.scheduler.home}/samples/scripts/selection/checkMatlab.js"/>
                </script>
            </selection>
            <javaExecutable class="org.ow2.proactive.scheduler.ext.matlab.MatlabTask">
                <parameters>
                    <parameter name="input" value="in=[1 0 3 -2 5 3];"/>
                    <parameter name="script" value="out=roots(in);"/>
                </parameters>
            </javaExecutable>
        </task>
        <task name="root4" preciousResult="true">
            <description>Calculates the root of a polynomial</description>
            <selection>
                <script>
                    <file url="file:${pa.scheduler.home}/samples/scripts/selection/checkMatlab.js"/>
                </script>
            </selection>
            <javaExecutable class="org.ow2.proactive.scheduler.ext.matlab.MatlabTask">
                <parameters>
                    <parameter name="input" value="in=[1 0 3 -2 5 4];"/>
                    <parameter name="script" value="out=roots(in);"/>
                </parameters>
            </javaExecutable>
        </task>
    </taskFlow>
</job>
<!-- @snippet-end Matlab_JobDescriptor_0-->
