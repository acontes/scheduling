<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Resource Explorer"
            icon="icons/sample.gif"
            class="org.objectweb.proactive.extensions.resourcemanager.gui.views.ResourceExplorerView"
            id="org.objectweb.proactive.extensions.resourcemanager.gui.views.ResourceExplorerView">
      </view>
      <view
            class="org.objectweb.proactive.extensions.resourcemanager.gui.views.StatisticsView"
            icon="icons/sample.gif"
            id="org.objectweb.proactive.extensions.resourcemanager.gui.views.StatisticsView"
            name="Statistics">
      </view>
      <view
            class="org.objectweb.proactive.extensions.resourcemanager.gui.views.NodeInfoView"
            icon="icons/sample.gif"
            id="org.objectweb.proactive.extensions.resourcemanager.gui.views.NodeInfoView"
            name="Info">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.objectweb.proactive.extensions.resourcemanager.gui.ResourceManagerPerspective"
            id="org.objectweb.proactive.extensions.scheduler.gui.ResourceManagerPerspective"
            name="Resource Manager">
      </perspective>
   </extension>

</plugin>
