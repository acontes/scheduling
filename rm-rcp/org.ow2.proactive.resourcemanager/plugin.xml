<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.ow2.proactive.resourcemanager.Application">
         </run>
      </application>
   </extension>
   <extension
         id="resourcemanager"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.ow2.proactive.resourcemanager.application"
            name="ProActive Resource Manager Client">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif"/>
         <property
               name="startupForegroundColor"
               value="EB791F"/>
         <property
               name="startupMessageRect"
               value="10,30,435,20"/>
         <property
               name="startupProgressRect"
               value="10,10,435,15"/>
         <property
               name="appName"
               value="ProActive Resource Manager Client">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_about.gif">
         </property>
         <property
               name="aboutText"
               value="%About.text">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.ow2.proactive.resourcemanager.gui.ResourceManagerPerspective"
            id="org.ow2.proactive.resourcemanager.gui.ResourceManagerPerspective"
            name="Resource Manager">
      </perspective>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.ow2.proactive.resourcemanager.gui.views.category"
            name="RM">
      </category>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.ResourceExplorerView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.ResourceExplorerView"
            name="Tree Explorer">
      </view>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.StatisticsView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.StatisticsView"
            name="Statistics">
      </view>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.NodeInfoView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.NodeInfoView"
            name="Info">
      </view>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.ResourcesTabView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.ResourcesTabView"
            name="Tab Explorer">
      </view>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.ResourcesCompactView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.ResourcesCompactView"
            name="Compact View">
      </view>
       <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.ResourcesTopologyView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.ResourcesTopologyView"
            name="Topology View (beta)">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            description="connection category"
            id="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            name="connectionCategory">
      </category>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ConnectHandler"
            description="connection to RM"
            id="org.ow2.proactive.resourcemanager.plugin.gui.connectCommand"
            name="connectCommand">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.DisconnectHandler"
            description="disconnection from RM"
            id="org.ow2.proactive.resourcemanager.plugin.gui.disconnectCommand"
            name="disconnectCommand">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ShutdownHandler"
            description="Shutdown connected RM"
            id="org.ow2.proactive.resourcemanager.plugin.shutdown"
            name="Shutdown RM">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.CreateNodeSourceHandler"
            description="Create a new node source"
            id="org.ow2.proactive.resourcemanager.plugin.createNodesource"
            name="Create node source">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.RemoveNodeSourceHandler"
            description="Remove a node source"
            id="org.ow2.proactive.resourcemanager.plugin.removeNodesource"
            name="Remove node source">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.AddNodesHandler"
            description="Add node command"
            id="org.ow2.proactive.resourcemanager.plugin.addNodes"
            name="Add node">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.RemoveNodesHandler"
            description="Remove nodes command"
            id="org.ow2.proactive.resourcemanager.plugin.removeNodes"
            name="Remove nodes">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.LockNodesHandler"
            description="Lock nodes command"
            id="org.ow2.proactive.resourcemanager.plugin.lockNodes"
            name="Lock nodes">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.UnlockNodesHandler"
            description="Release nodes command"
            id="org.ow2.proactive.resourcemanager.plugin.unlockNodes"
            name="Unlock nodes">
      </command>
      <command
            categoryId="org.ow2.proactive.resourcemanager.plugin.gui.connectionCategory"
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.DescribeCommandHandler"
            description="Describe node command"
            id="org.ow2.proactive.resourcemanager.plugin.describeCommand"
            name="Desccribe node">
      </command>
      <command
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ShowAccountHandler"
            id="org.ow2.proactive.resourcemanager.command.ShowAccount"
            name="Show my account">
      </command>
      <command
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ShowRuntimeDataHandler"
            id="org.ow2.proactive.resourcemanager.command.ShowRuntimeData"
            name="Show Runtime Data">
      </command>
      <command
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ExitHandler"
            id="org.ow2.proactive.resourcemanager.ExitCommand"
            name="Exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="popup:org.eclipse.ui.popup.configureview"
            targetID="org.ow2.proactive.resourcemanager.gui.views.ResourcesCompactView">
         <action
               class="org.ow2.proactive.resourcemanager.gui.actions.ConfigureViewAction"
               id="org.ow2.proactive.resourcemanager.plugin.configureviewaction"
               label="Configure view"
               menubarPath="org.ow2.proactive.resourcemanager.plugin.configureviewmenu"
               style="push">
         </action>
         <menu
               id="org.ow2.proactive.resourcemanager.plugin.configureviewmenu"
               label="Configure view">
         </menu>
      </viewerContribution>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="popup:org.eclipse.ui.popup.any">
         <command
               commandId="org.ow2.proactive.resourcemanager.plugin.addNodes"
               icon="icons/add_node.png"
               label="Add node"
               tooltip="Add node by URL">
         </command>
         <command
               commandId="org.ow2.proactive.resourcemanager.plugin.removeNodes"
               icon="icons/remove_node.png"
               label="Remove nodes"
               tooltip="remove nodes">
         </command>
         <command
               commandId="org.ow2.proactive.resourcemanager.plugin.lockNodes"
               icon="icons/locked.png"
               label="Lock nodes"
               tooltip="Lock nodes">
         </command>
         <command
               commandId="org.ow2.proactive.resourcemanager.plugin.unlockNodes"
               icon="icons/free.png"
               label="Unlock nodes"
               tooltip="Unlock nodes">
         </command>
         <command
               commandId="org.ow2.proactive.resourcemanager.plugin.createNodesource"
               icon="icons/create_source.png"
               label="Create node source"
               tooltip="Create a new node source on Resource Manager">
         </command>
         <command
               commandId="org.ow2.proactive.resourcemanager.plugin.removeNodesource"
               icon="icons/remove_source.png"
               label="Remove node source"
               tooltip="Remove an existing node source with all its nodes">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               label="ResourceManager"
               mnemonic="R">
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.gui.connectCommand"
                  icon="icons/connect.gif"
                  label="Connect"
                  mnemonic="C"
                  tooltip="connect to a Resource Manager">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.gui.disconnectCommand"
                  icon="icons/disconnect.gif"
                  label="Disconnect"
                  mnemonic="D"
                  tooltip="disconnect from a Resource Manager">
            </command>
            <separator
                  name="org.ow2.proactive.resourcemanager.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.ow2.proactive.resourcemanager.ExitCommand"
                  icon="icons/exit.png"
                  label="E&amp;xit"
                  style="push">
            </command>
         </menu>
         <menu
               id="ActionsMenu"
               label="&amp;Admin">
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.addNodes"
                  icon="icons/add_node.png"
                  label="Add node"
                  tooltip="Add node by URL">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.removeNodes"
                  icon="icons/remove_node.png"
                  label="Remove nodes"
                  tooltip="remove nodes">
            </command>
            <separator
                  name="org.ow2.proactive.resourcemanager.separator3"
                  visible="true">
            </separator>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.createNodesource"
                  icon="icons/create_source.png"
                  label="Create node source"
                  tooltip="Create a new node source on Resource Manager">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.removeNodesource"
                  icon="icons/remove_source.png"
                  label="Remove node source"
                  tooltip="Remove an existing node source with all its nodes">
            </command>
            <separator
                  name="org.ow2.proactive.resourcemanager.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.shutdown"
                  icon="icons/rm_shutdown.gif"
                  label="Shutdown"
                  tooltip="Shutdown connected Resource Manager">
            </command>
         </menu>
         <menu
               label="&amp;Window">
            <command
                  commandId="org.eclipse.ui.views.showView"
                  label="Show View..."
                  style="pulldown">
            </command>
            <command
                  commandId="org.eclipse.ui.window.resetPerspective"
                  label="Reset perspective..."
                  style="push">
            </command>
            <separator
                  name="org.ow2.proactive.resourcemanager.separator4"
                  visible="true">
            </separator>
            <command
                  commandId="org.ow2.proactive.resourcemanager.command.ShowRuntimeData"
                  icon="icons/areacharticon.gif"
                  label="Show Runtime Monitoring"
                  style="push"
                  tooltip="Show Runtime Data">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.command.ShowAccount"
                  icon="icons/user.png"
                  label="Show My Account"
                  style="push"
                  tooltip="Shows accounting information">
            </command>
         </menu>
         <menu
               id="HelpMenu"
               label="&amp;Help">
            <command
                  commandId="org.eclipse.ui.help.aboutAction"
                  label="About Resource Manager"
                  style="push"
                  tooltip="About ProActive Resource Manager">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="toolbar">
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.gui.connectCommand"
                  icon="icons/connect.gif"
                  id="org.ow2.proactive.resourcemanager.plugin.gui.connectCommand"
                  label="Connect"
                  style="push"
                  tooltip="connect to a Resource Manager">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.gui.disconnectCommand"
                  icon="icons/disconnect.gif"
                  id="org.ow2.proactive.resourcemanager.plugin.gui.disconnectCommand"
                  label="Disconnect"
                  tooltip="disconnect from a Resource Manager">
            </command>
            <separator
                  name="separator1"
                  visible="true">
            </separator>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.addNodes"
                  icon="icons/add_node.png"
                  label="Add node"
                  tooltip="Add node by URL">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.removeNodes"
                  icon="icons/remove_node.png"
                  label="Remove nodes"
                  tooltip="remove nodes">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.createNodesource"
                  icon="icons/create_source.png"
                  label="Create node source"
                  tooltip="Create a new node source on Resource Manager">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.removeNodesource"
                  icon="icons/remove_source.png"
                  label="Remove node source"
                  tooltip="Remove an existing node source with all its nodes">
            </command>
            <command
                  commandId="org.ow2.proactive.resourcemanager.plugin.shutdown"
                  icon="icons/rm_shutdown.gif"
                  label="Shutdown"
                  tooltip="Shutdown connected Resource Manager">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <scheme
            id="org.ow2.proactive.resourcemanager.plugin.scheme"
            name="RM keys bindings Scheme"
            parentId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </scheme>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.addNodes"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+A">
      </key>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.removeNodes"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+DEL">
      </key>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.gui.connectCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+C">
      </key>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.gui.disconnectCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+D">
      </key>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.shutdown"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+S">
      </key>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.createNodesource"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+N">
      </key>
      <key
            commandId="org.ow2.proactive.resourcemanager.plugin.removeNodesource"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.ow2.proactive.resourcemanager.plugin.scheme"
            sequence="M1+R">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.actionSets">
      <actionSet
            id="org.ow2.proactive.resourcemanager.jmxActionSet"
            label="JMX ChartIt"
            visible="true">
         <action
               class="org.ow2.proactive.resourcemanager.gui.actions.ShowMyAccountActionDelegate"
               icon="icons/user.png"
               id="org.ow2.proactive.resourcemanager.showMyAccount"
               label="Show My Account"
               style="push"
               toolbarPath="toolbar:org.eclipse.ui.main.toolbar"
               tooltip="Shows accounting information">
         </action>
         <action
               class="org.ow2.proactive.resourcemanager.gui.actions.ShowRuntimeDataActionDelegate"
               icon="icons/areacharticon.gif"
               id="org.ow2.proactive.resourcemanager.showRuntimeData"
               label="Show Runtime Monitoring"
               style="push"
               toolbarPath="toolbar:org.eclipse.ui.main.toolbar"
               tooltip="Shows some runtime information about the Resource Manager">
         </action>
      </actionSet>
   </extension>

</plugin>
