            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.DescribeCommandHandler"
            description="Describe node command"
            id="org.ow2.proactive.resourcemanager.plugin.describeCommand"
            name="Desccribe node">
      </command>
      <command
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ShowAccountHandler"
            id="org.ow2.proactive.resourcemanager.command.ShowAccount"
            name="Show my account">
      </command>
      <command
            defaultHandler="org.ow2.proactive.resourcemanager.gui.handlers.ShowRuntimeDataHandler"
            id="org.ow2.proactive.resourcemanager.command.ShowRuntimeData"
            name="Show Runtime Monitoring and History">
      </command>
