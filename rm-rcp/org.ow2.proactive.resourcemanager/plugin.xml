            provider="org.ow2.proactive.resourcemanager.integration.RMPerspectiveSourceProvider">
         <variable
               name="org.ow2.proactive.resourcemanager.ShowActions"
               priorityLevel="workbench">
         </variable>
      </sourceProvider>
   </extension>

</plugin>
