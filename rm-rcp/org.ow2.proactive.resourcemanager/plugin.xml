   <extension
         point="org.eclipse.ui.popupMenus">
      <viewerContribution
            id="popup:org.eclipse.ui.popup.configureview"
            targetID="org.ow2.proactive.resourcemanager.gui.views.ResourcesCompactView">
         <action
               class="org.ow2.proactive.resourcemanager.gui.actions.ConfigureViewAction"
               id="org.ow2.proactive.resourcemanager.plugin.configureviewaction"
               label="Configure view"
               menubarPath="org.ow2.proactive.resourcemanager.plugin.configureviewmenu"
               style="push">
         </action>
         <menu
               id="org.ow2.proactive.resourcemanager.plugin.configureviewmenu"
               label="Configure view">
         </menu>
      </viewerContribution>
   </extension>
