<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="org.ow2.proactive.resourcemanager.Application">
         </run>
      </application>
   </extension>
   <extension
         id="resourcemanager"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.ow2.proactive.resourcemanager.application"
            name="ProActive Resource Manager Client">
         <property
               name="windowImages"
               value="icons/alt_window_16.gif,icons/alt_window_32.gif"/>
         <property
               name="startupForegroundColor"
               value="EB791F"/>
         <property
               name="startupMessageRect"
               value="10,30,435,20"/>
         <property
               name="startupProgressRect"
               value="10,10,435,15"/>
         <property
               name="appName"
               value="ProActive Resource Manager Client">
         </property>
         <property
               name="preferenceCustomization"
               value="plugin_customization.ini">
         </property>
         <property
               name="aboutImage"
               value="icons/alt_about.gif">
         </property>
         <property
               name="aboutText"
               value="%About.text">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.ow2.proactive.resourcemanager.gui.ResourceManagerPerspective"
            id="org.ow2.proactive.resourcemanager.gui.ResourceManagerPerspective"
            name="Cloud &amp;&amp; Grid">
      </perspective>
   </extension>

   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.ow2.proactive.resourcemanager.gui.views.category"
            name="RM">
      </category>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.ResourceExplorerView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.ResourceExplorerView"
            name="Tree Explorer">
      </view>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.StatisticsView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.StatisticsView"
            name="Statistics">
      </view>
      <view
            allowMultiple="false"
            category="org.ow2.proactive.resourcemanager.gui.views.category"
            class="org.ow2.proactive.resourcemanager.gui.views.NodeInfoView"
            icon="icons/pa_icon_16.gif"
            id="org.ow2.proactive.resourcemanager.gui.views.NodeInfoView"
            name="Info">
      </view>
      <view
            allowMultiple="false"
