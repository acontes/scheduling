<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment 
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 ../src/Extra/org/objectweb/proactive/extensions/gcmdeployment/schema/ExtensionSchemas.xsd	">

	<environment>
		<javaPropertyVariable name="user.dir" />
	</environment>

	<resources>
		<group refid="ccs">
			<host refid="node"/>
		</group>
	</resources>

	<infrastructure>

		<hosts>
			<host id="node" os="windows" >
				<homeDirectory base="root" relpath="${user.dir}" />
			</host>

		</hosts>
		
		<groups>
			<ccsGroup id="ccs" bookedNodesAccess="rsh">
				<resources cpus="9" runtime="01:01:01"/> <!-- runtime=days:hours:min -->
				<stdout>\\HN\work\out</stdout>
				<stderr>\\HN\work\err</stderr>
			</ccsGroup>
		</groups>

	</infrastructure>
</GCMDeployment>
