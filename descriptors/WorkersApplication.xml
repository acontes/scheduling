<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 ../src/Extra/org/objectweb/proactive/extra/gcmdeployment/schema/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="proactive.home" />
		<javaPropertyVariable name="user.dir" />
	</environment>


	<application>
		<proactive base="root" relpath="${proactive.home}">

			<configuration>
				<applicationClasspath type="append">
					<pathElement base="proactive"
						relpath="dist/lib/bouncycastle.jar" />
					<pathElement base="proactive"
						relpath="dist/lib/fractal.jar" />
					<pathElement base="proactive"
						relpath="dist/lib/ganymed-ssh2-build210.jar" />
					<pathElement base="proactive"
						relpath="dist/lib/javassist.jar" />
				</applicationClasspath>
			</configuration>

			<virtualNode id="Workers" capacity="4">
				<nodeProvider refid="workers" />
			</virtualNode>

		</proactive>
	</application>

	<resources>
		<nodeProvider id="workers">
			<file path="WorkersDeploymentLocal.xml" />
		</nodeProvider>
	</resources>

</GCMApplication>
