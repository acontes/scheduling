<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 ../src/Extra/org/objectweb/proactive/extensions/gcmdeployment/schema/ExtensionSchemas.xsd	">

	<environment>
		<javaPropertyVariable name="user.dir" />
	</environment>

	<resources>
		<host refid="hLocalhost" />
	</resources>

	<infrastructure>

		<hosts>
			<host id="hLocalhost" os="unix" hostCapacity="3" vmCapacity="2">
				<homeDirectory base="root" relpath="${user.dir}" />
			</host>

		</hosts>

	</infrastructure>
</GCMDeployment>
