<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 ../src/Extra/org/objectweb/proactive/extra/gcmdeployment/schema/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="proactive.dir" />
		<javaPropertyVariable name="user.dir" />
	</environment>


	<application>
		<proactive base="root"
			relpath="/user/glaurent/home/workspace/proactive_trunk">

			<configuration>
				<proactiveClasspath type="append">
					<pathElement base="proactive"
						relpath="classes/Core" />
					<pathElement base="proactive"
						relpath="classes/Extra" />
				</proactiveClasspath>
				<java base="root"
					relpath="/user/jlscheef/home/bin/jdk1.6.0_01/bin/java" />
				<securityPolicy base="proactive"
					relpath="compile/proactive.java.policy" />
			</configuration>

			<virtualNode id="OutputListener" capacity="1">
				<nodeProvider refid="LOCAL" />
			</virtualNode>
			<virtualNode id="NumberSource" capacity="1">
				<nodeProvider refid="LOCAL" />
			</virtualNode>
			<virtualNode id="Containers" capacity="3">
				<nodeProvider refid="LOCAL" />
			</virtualNode>

		</proactive>
	</application>

	<resources>
		<nodeProvider id="LOCAL">
			<file path="EratosthenesDeployment.xml" />
		</nodeProvider>
	</resources>

</GCMApplication>
