<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment xmlns="urn:gcm:deployment:1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd	">

	<environment>
		<descriptorVariable name="PROACTIVE_HOME" value="/home/user/ProActive" /><!--CHANGE ME!!!! -->
		<descriptorVariable name="JAVA_HOME" value="/path/to/jdk1.5.0" /><!-- Path of the remote JVM , CHANGE ME!!!! -->
	</environment>


	<resources>
		<bridge refid="sshCluster">
			<group refid="sgeProcess">
				<host refid="sgeHost" />
			</group>
		</bridge>
	</resources>


	<infrastructure>
		<hosts>
			<host os="unix" id="sgeHost">
				<homeDirectory base="root" relpath="???" />
			</host>
		</hosts>

		<bridges>
			<sshBridge hostname="frontend" username="plugtest" id="sshCluster" />
		</bridges>

		<groups>
			<gridEngineGroup bookedNodesAccess="rsh" id="sgeProcess">
				<scriptPath base="proactive" relpath="scripts/unix/cluster/gridEngineStartRuntime.sh" />
				<resources nodes="10" walltime="1:00" parallelEnvironment="mpi"></resources>
			</gridEngineGroup>
		</groups>

	</infrastructure>

</GCMDeployment>
