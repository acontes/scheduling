<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 ../src/Extra/org/objectweb/proactive/extra/gcmdeployment/schema/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="proactive.dir" />
		<javaPropertyVariable name="user.dir" />
	</environment>


	<application>
		<proactive base="root" relpath="${proactive.dir}">

			<virtualNode id="Hello" capacity="1">
				<nodeProvider refid="LOCAL" />
			</virtualNode>

		</proactive>
	</application>

	<resources>
		<nodeProvider id="LOCAL">
			<file path="helloDeploymentLocal.xml" />
		</nodeProvider>
	</resources>

</GCMApplication>
