<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="urn:gcm:application:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ApplicationSchemas.xsd">

        <environment>
                <javaPropertyVariable name="proactive.home" />
                <javaPropertyVariable name="user.dir" />
        </environment>


        <application>
			<proactive relpath="\\HN\work\" base="root">
                        <virtualNode id="Workers" capacity="9">
                                <nodeProvider refid="workers" />
                        </virtualNode>

                </proactive>
        </application>

        <resources>
                <nodeProvider id="workers">
                        <file path="WorkersDeploymentCCS.xml" />
                </nodeProvider>
        </resources>
</GCMApplication>

