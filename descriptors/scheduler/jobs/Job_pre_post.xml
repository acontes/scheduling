		<task name="main_task" finalTask="true">
			<!-- Task human description -->
			<description>Testing the pre and post scripts.</description>
			<preTask>
				<script file="/user/jmartin/home/scripts/set.js" />
			</preTask>
			<process>
				<javaProcess
					class="org.objectweb.proactive.extra.scheduler.examples.PropertyTask">
				</javaProcess>
			</process>
			<postTask>
				<script file="/user/jmartin/home/scripts/unset.js" />
			</postTask>
		</task>
	</tasks>
</job>
