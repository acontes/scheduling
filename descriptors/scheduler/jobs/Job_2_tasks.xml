<?xml version="1.0" encoding="UTF-8"?>
<job name="job_2_tasks" priority="normal" >
	<description>2 tasks with variable durations</description>
	<tasks>
		<task name="task1">
			<!-- Task human description -->
			<description>task WaitAndPrint - will sleep for 1s</description>
			<process>
				<javaProcess
					class="org.objectweb.proactive.extra.scheduler.examples.WaitAndPrint">
					<initParameters>
						<parameter name="sleepTime" value="1" />
						<parameter name="number" value="1" />
					</initParameters>
				</javaProcess>
			</process>
		</task>
		<task name="task2" finalTask="true">
			<!-- Task human description -->
			<description>task WaitAndPrint - will sleep for 8s</description>
			<process>
				<javaProcess
					class="org.objectweb.proactive.extra.scheduler.examples.WaitAndPrint">
					<initParameters>
						<parameter name="sleepTime" value="8" />
						<parameter name="number" value="2" />
					</initParameters>
				</javaProcess>
			</process>
		</task>
	</tasks>
</job>