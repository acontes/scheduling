			</jvm>
			<jvm name="Jvm6">
				<creation>
					<processReference refid="localJVM3" />
				</creation>
			</jvm>
			<jvm name="Jvm7">
				<creation>
					<processReference refid="localJVM4" />
				</creation>
			</jvm>
			<jvm name="Jvm8">
				<creation>
					<processReference refid="localJVM4" />
				</creation>
			</jvm>
			<jvm name="Jvm9">
				<creation>
					<processReference refid="localJVM5" />
				</creation>
			</jvm>
			<jvm name="Jvm10">
				<creation>
					<processReference refid="localJVM5" />
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>

		<processes>
			<processDefinition id="localJVM1">
				<sshProcess
					class="org.objectweb.proactive.core.process.ssh.SSHProcess"
					hostname="apple">
					<processReference refid="JVM" />
				</sshProcess>
			</processDefinition>


			<processDefinition id="localJVM2">
				<sshProcess
					class="org.objectweb.proactive.core.process.ssh.SSHProcess"
					hostname="fiacre">
					<processReference refid="JVM" />
				</sshProcess>
			</processDefinition>


			<processDefinition id="localJVM3">
				<sshProcess
