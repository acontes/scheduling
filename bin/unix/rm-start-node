#!/usr/bin/env bash
echo
echo --- StartNode -------------------------------------------

if [ $# -lt 1 ]; then
    echo "
       Start a new Node
         rm-start-node -n <the name of the node to create>

         ex : rm-start-node -n node1
         ex : rm-start-node -n node2

    "
    exit 1
fi

workingDir=`dirname $0`
. $workingDir/env log4j-defaultNode
eval $JAVACMD org.ow2.proactive.resourcemanager.utils.RMNodeStarter "$@"

echo
echo ---------------------------------------------------------
