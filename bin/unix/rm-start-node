#!/usr/bin/env bash
echo
echo --- StartNode -------------------------------------------

if [ $# -lt 1 ]; then
    echo "
       Start a new Node
         rm-start-node <the name of the node to create>

         ex : rm-start-node node1
         ex : rm-start-node node2

    "
    exit 1
fi

workingDir=`dirname $0`
. $workingDir/env log4j-client
eval $JAVACMD org.objectweb.proactive.core.node.StartNode "$@"

echo
echo ---------------------------------------------------------
