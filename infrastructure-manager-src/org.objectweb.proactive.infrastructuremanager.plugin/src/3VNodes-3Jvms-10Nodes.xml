<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://www-sop.inria.fr/oasis/proactive/schema/3.2/DescriptorSchema.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="Asterix" property="multiple"/>
			<virtualNode name="Obelix"  property="multiple"/>
			<virtualNode name="Idefix"  property="multiple"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
           <register virtualNode="Asterix" protocol="rmi"/> 
           <mapping>
			<map virtualNode="Asterix">
				<jvmSet>
					<vmName value="Jvm1"/>
				</jvmSet>
			</map>
			<map virtualNode="Obelix">
				<jvmSet>
					<vmName value="Jvm2"/>
				</jvmSet>
			</map>
			<map virtualNode="Idefix">
				<jvmSet>
					<vmName value="Jvm3"/>
				</jvmSet>
			</map>
           </mapping>
		<jvms>
			<jvm name="Jvm1" askedNodes="3">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm2" askedNodes="2">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm3" askedNodes="5">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
				</jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
