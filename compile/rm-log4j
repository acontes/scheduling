# Default: INFO level, FILE appender
log4j.rootLogger=WARN, CONSOLE

log4j.logger.proactive.configuration=ERROR

# everything from RM has level DEBUG...
log4j.logger.proactive.resourceManager=DEBUG

# ...except statistics and database
log4j.logger.proactive.resourceManager.statistics=WARN
log4j.logger.proactive.resourceManager.database=WARN
log4j.logger.proactive.resourceManager.connection=WARN

# ... and rmlauncher and consol. These also go to CONSOLE appender
log4j.logger.proactive.resourceManager.rmlauncher=INFO, CONSOLE
log4j.logger.proactive.resourceManager.consol=INFO, CONSOLE

log4j.additivity.org.hibernate=false
log4j.logger.org.hibernate=WARN, CONSOLE

log4j.logger.com.mchange=WARN, CONSOLE
log4j.logger.com.mchange.v2.c3p0=WARN, CONSOLE
log4j.logger.com.mchange.v2.c3p0.SQLWarnings=WARN, CONSOLE

# CONSOLE appender
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=[%-5p %d{ISO8601}] [RM.%C{1}.%M] %m%n
