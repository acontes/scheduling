	<!-- ================================================================================ -->
	<!--    Create the proactive Web Archive to be used with the web service framework    -->
	<!-- ================================================================================ -->
	<target name="proActiveWar" depends="proActiveJar">
		<war destfile="${PAdist.dir}/proactive.war" webxml="${src.extensions.dir}/org/objectweb/proactive/extensions/webservices/soap/web.xml" basedir="${src.extensions.dir}/org/objectweb/proactive/extensions/webservices/war-root">
			<lib dir="${lib.dir}">
				<include name="*.jar" />
			</lib>
			<lib dir="${PAdist.dir}">
				<include name="ProActive.jar" />
			</lib>
		</war>
	</target>
</project>
