<?xml version="1.0" encoding="UTF-8"?>
<project basedir="compile">
	<taskdef name="if" classname="ise.antelope.tasks.IfTask"/>

	<property environment="env" />

	<!-- junit properties -->
	<property name="junit.showoutput" value="true"/>

	
	<property name="base.dir"            value="${basedir}/.." />
	<property name="lib.dir"             value="${base.dir}/lib" />
	<property name="src.dir"             value="${base.dir}/src" />
	<property name="compile.dir"         value="${base.dir}/compile" />
	<property name="dev.dir"             value="${base.dir}/dev" />
	<property name="classes.dir"         value="${base.dir}/classes" />
	<property name="dist.dir"            value="${base.dir}/dist" />
	<property name="dist.lib.dir"        value="${dist.dir}/lib" />
	
	<property name="junit.dir"           value="${base.dir}/junitReports" />

	<property name="deploy.dir"          value="${base.dir}/dist" />
	<property name="deploy.lib.dir"      value="${deploy.dir}/lib" />
	
	<property name="src.scheduler.dir"   value="${src.dir}/scheduler/src" />
	<property name="tests.scheduler.dir" value="${src.dir}/scheduler/tests" />
	<property name="cl.scheduler.dir"    value="${classes.dir}/scheduler" />
		
	<property name="src.rm.dir"          value="${src.dir}/resource-manager/src" />
	<property name="tests.rm.dir"        value="${src.dir}/resource-manager/tests" />
	<property name="cl.rm.dir"           value="${classes.dir}/resource-manager" />
		
	
	<property name="proactive.path" 	value="org/ow2/proactive" />

	<property name="proactive.core.path" value="${proactive.path}/core" />
	<property name="proactive.ext.path" value="${proactive.path}/ext" />
	<property name="scheduler.path"    value="${proactive.path}/scheduler"/>
	<property name="rm.path"    		value="${proactive.path}/resourcemanager"/>

	<property name="doc.src"       		value="${base.dir}/doc-src" />
	<property name="docs.dir"      		value="${base.dir}/docs" />
	<property name="docs.tmp.dir"  		value="${docs.dir}/tmp" />
	<property name="docs.mainFile" 		value="PA_index.xml" />
	<property name="snippets.location"	value="${doc.src}/automatic_snippets" />
	
	<property name="scheduler-plugin.dir" value="${base.dir}/scheduler-plugins-src" />
	<property name="resourcemanager-plugin.dir" value="${base.dir}/resource-manager-plugin-src" />
		

	<!-- Javac properties -->
	<property name="debug" value="on" />
	<property name="source" value="1.5" />

	<!-- Clover -->
	<property name="clover.report.dir"        value="${base.dir}/clover" />
	<property name="clover.historyreport.dir" value="${base.dir}/clover_history" />
	<property name="clover.historypoint.dir"  value="${base.dir}/clover_db" />

	<property name="stubgenerator.class" value="org.objectweb.proactive.ext.util.StubGenerator" />

	<!-- DocBook -->
	<property name="docbook.version" value="1.73.2" />
	
	<!-- ================================================================ -->
	<!--                   define the different classpaths                -->
	<!--  =============================================================== -->

	<path id="rm.libs">
		<fileset dir="${lib.dir}">
			<include name="ProActive/**/*.jar"/>		
			<include name="common/**/*.jar"/>		
			<include name="resource-manager/**/*.jar"/>	
		</fileset>		
		<pathelement location="${base.dir}/compile/lib/junit-4.3.jar"/>
	</path>

	<path id="scheduler.libs">
		<fileset dir="${lib.dir}">
			<include name="ProActive/**/*.jar"/>		
			<include name="common/**/*.jar"/>		
			<include name="scheduler/**/*.jar"/>	
		</fileset>
		
		<pathelement location="${base.dir}/compile/lib/junit-4.3.jar"/>
	</path>
	
	<path id="test.classpath">
		<fileset dir="${lib.dir}">
			<include name="ProActive/**/*.jar"/>		
			<include name="common/**/*.jar"/>		
			<include name="resource-manager/**/*.jar"/>	
			<include name="scheduler/**/*.jar"/>	
		</fileset>
		
		<pathelement path="${cl.rm.dir}"/>
		<pathelement path="${cl.scheduler.dir}"/>

		<pathelement location="${base.dir}/compile/lib/junit-4.3.jar"/>
	</path>
</project>
