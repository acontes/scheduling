<?xml version="1.0" encoding="UTF-8"?>
<project default="deploy.rm" basedir=".">
	
	<taskdef name="var" classname="ise.antelope.tasks.Variable"/>
	
	<import file="rm-env.xml" />
	<import file="common-build.xml" />

	<!-- ************
		Compilation
	-->

	<target name="compile.rm" depends="compile.common" description="Compile all Resource Manager stuffs">
		<mkdir dir="${cl.rm.dir}"/>
		<mkdir dir="${cl.rm.tests.dir}"/>

		<copy toDir="${cl.rm.dir}">
			<fileset dir="${src.rm.dir}" excludes="**/*.java"/>
		</copy>

		<copy toDir="${cl.rm.tests.dir}">
				<fileset dir="${src.rm.tests.dir}" excludes="**/*.java"/>
				<fileset dir="${cl.rm.tests.dir}" excludes="**/*.java"/>
		</copy>

		<javac
			srcdir="${src.rm.dir}"
			destdir="${cl.rm.dir}"
			deprecation="on"
			source="${source}"
			debug="${debug}"  >

			<classpath refid="rm.libs"/>
			<include name="**/*.java"/>
		</javac>

		<javac
			srcdir="${src.rm.tests.dir}"
			destdir="${cl.rm.tests.dir}"
			deprecation="on"
			source="${source}"
			debug="${debug}"  >

			<classpath refid="rm.libs"/>
			<classpath path="${cl.rm.dir}"/>
			<include name="**/*.java"/>
		</javac>
		
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/authentication/RMAuthenticationImpl" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/frontend/RMAdminImpl" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/frontend/RMUserImpl" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/frontend/RMMonitoringImpl" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/selection/ProbablisticSelectionManager" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/nodesource/NodeSource" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/examples/windowsagent/Test" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/nodesource/dataspace/DataSpaceNodeConfigurationAgent" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/core/RMCore" />
		<generate_stub_for_class targetedClasspath="rm.classpath" srcDir="${cl.rm.dir}" class="org/ow2/proactive/resourcemanager/nodesource/policy/NodeSourcePolicy" />
		<generate_stub_for_class targetedClasspath="rm.test.classpath" srcDir="${cl.rm.tests.dir}" class="functionaltests/RMLauncherAO" />
		<generate_stub_for_class targetedClasspath="rm.test.classpath" srcDir="${cl.rm.tests.dir}" class="functionaltests/monitor/RMMonitorEventReceiver" />
		
	</target>

    <!-- ************
		Deploy
	-->

	<target name="deploy.rm" depends="-deployCopy, compile.rm, deploy.common" description="Creates resource manager core jar">
		<jar destfile="${deploy.lib.dir}/${rm.jar}" manifest="${basedir}/rm-Manifest-base.mf" index="true">
			<fileset dir="${cl.rm.dir}" includes="**" />
			<indexjars>
				<fileset refid="jar.index.fileset" />
			</indexjars>
        </jar>
	</target>

	<target name="deploy.rm.client" depends="-deployCopy, compile.rm, deploy.common.client" description="Creates resource manager client jar">
		<jar destfile="${deploy.lib.dir}/${rm.client.jar}" manifest="${basedir}/rm-Manifest-base.mf" index="true">
			<fileset dir="${cl.rm.dir}">
				<include name="org/ow2/proactive/resourcemanager/authentication/RMAuthentication.class" />
				<include name="org/ow2/proactive/resourcemanager/common/**" />
				<include name="org/ow2/proactive/resourcemanager/exception/**" />
				<include name="org/ow2/proactive/resourcemanager/nodesource/common/**" />
				<include name="org/ow2/proactive/resourcemanager/nodesource/NodeSource.class" />
				<include name="org/ow2/proactive/resourcemanager/utils/adminconsole/**" />
				<include name="org/ow2/proactive/resourcemanager/frontend/RMAdmin.class" />
				<include name="org/ow2/proactive/resourcemanager/frontend/RMConnection.class" />
				<include name="org/ow2/proactive/resourcemanager/frontend/RMMonitoring.class" />
				<include name="org/ow2/proactive/resourcemanager/frontend/RMUser.class" />
				<include name="org/ow2/proactive/resourcemanager/frontend/RMEventListener.class" />
				<!-- RMNode is needed because it is used in RMNodeEvent-->
				<include name="org/ow2/proactive/resourcemanager/rmnode/RMNode.class" />
			</fileset>
			<indexjars>
				<fileset refid="jar.index.fileset" />
			</indexjars>
        </jar>
	</target>

	<!-- ************
		Junit tests
	-->

	<target name="junit.rm" depends="deploy.rm" description="Run resource manager's tests">
		<junitMacro
			testsuite="rm.testsuite"
			testclasspath="rm.test.classpath"
			log4jconfig="-Dlog4j.configuration=file:${base.dir}/compile/rm-log4j"
		/>
	</target>

	<!-- ************
			RCP
		-->

	<target name="rcp.libClean.rm" description="Clean all required libraries for rm RCP">
		<delete dir="${rcp.rm.dir}/${rcp.rm.lib}/lib" />
	</target>

	<target name="rcp.libCopy.rm" depends="rcp.libClean.rm, deploy.rm.client" description="Copy all required libraries to RM plugins">
		<copy todir="${rcp.rm.dir}/${rcp.rm.lib}/lib" includeemptydirs="no">
			<fileset dir="${deploy.lib.dir}" excludes="ProActive_tests.jar, ${rm.jar}" />
		</copy>
	</target>

</project>
