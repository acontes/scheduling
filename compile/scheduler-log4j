# This file represents the log4j config file for Scheduler and Resource Manager. (FOR TEST purpose only)
# It is given as property in the build.xml file

# The default logging level is INFO
# The root logger logs in CONSOLE

log4j.rootLogger=INFO,CONSOLE

# avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.scheduler=false
log4j.additivity.proactive.scheduler.dev=false
log4j.additivity.proactive.scheduler.dev.admin=false
# define SCHEDULER loggers
log4j.logger.proactive.scheduler.dev=WARN,CONSOLE
log4j.logger.proactive.scheduler.dev.admin=INFO,CONSOLE
log4j.logger.proactive.scheduler.dev.admin.consol=INFO,CONSOLE
#log4j.logger.proactive.scheduler.dev.core=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.core=DEBUG
#log4j.logger.proactive.scheduler.dev.database=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.database=DEBUG
#log4j.logger.proactive.scheduler.dev.util=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.util=DEBUG
#log4j.logger.proactive.scheduler.dev.frontend=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.frontend=DEBUG
#log4j.logger.proactive.scheduler.dev.connection=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.connection=DEBUG
#log4j.logger.proactive.scheduler.dev.factory=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.factory=DEBUG
#log4j.logger.proactive.scheduler.dev.RMproxy=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.RMproxy=DEBUG
#log4j.logger.proactive.scheduler.dev.launcher=DEBUG
#log4j.logger.proactive.scheduler.dev.script=DEBUG
#log4j.logger.proactive.scheduler.dev.matlab=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.matlab=DEBUG
#log4j.logger.proactive.scheduler.dev.scilab=DEBUG
#log4j.logger.proactive.scheduler.dev.admin.scilab=DEBUG

# avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.resourceManager=false
# define RESOURCE MANAGER loggers
log4j.logger.proactive.resourceManager=INFO,CONSOLE
log4j.logger.proactive.resourceManager.core=INFO
log4j.logger.proactive.resourceManager.user=INFO
log4j.logger.proactive.resourceManager.monitoring=INFO
log4j.logger.proactive.resourceManager.nodeSource=INFO
log4j.logger.proactive.resourceManager.rmnode=INFO
log4j.logger.proactive.resourceManager.rmfactory=INFO
log4j.logger.proactive.resourceManager.rmlauncher=INFO

# Hibernate logger
log4j.additivity.org.hibernate=false
log4j.logger.org.hibernate=WARN,CONSOLE

# CONSOLE uses PatternLayout
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%m%n

# SCHEDULER Appender configuration (CONSOLE)
log4j.appender.schedulerAppenderINFO=org.apache.log4j.ConsoleAppender
log4j.appender.schedulerAppenderINFO.layout=org.apache.log4j.PatternLayout
log4j.appender.schedulerAppenderINFO.layout.ConversionPattern=[%-5p] [SCHEDULER.%C{1}] %m%n
log4j.appender.schedulerAppenderDEBUG=org.apache.log4j.ConsoleAppender
log4j.appender.schedulerAppenderDEBUG.layout=org.apache.log4j.PatternLayout
log4j.appender.schedulerAppenderDEBUG.layout.ConversionPattern=[%-5p] [SCHEDULER.%C{1}.%M] %m%n

# RM Appender configuration (CONSOLE)
log4j.appender.resourceManagerAppender=org.apache.log4j.ConsoleAppender
log4j.appender.resourceManagerAppender.layout=org.apache.log4j.PatternLayout
log4j.appender.resourceManagerAppender.layout.ConversionPattern=[%-5p] [RESOURCE_MANAGER.%C{1}] %m%n

# HIBERNATE Appender configuration (CONSOLE)
log4j.appender.hibernate=org.apache.log4j.ConsoleAppender
log4j.appender.hibernate.Target=System.out
log4j.appender.hibernate.layout=org.apache.log4j.PatternLayout
log4j.appender.hibernate.layout.ConversionPattern=[%-5p] [HIB_SCHEDULER.%C{1}] %m%n
