# This file represents the log4j config file for non regression tests.
# It is given as property (in the proactive.xml) when starting nonregression tests

# The default logging level is INFO
# The root logger logs in the test.log file

log4j.rootLogger=INFO,CONSOLE

#avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.scheduler=false
#define SCHEDULER loggers
log4j.logger.proactive.scheduler=INFO,schedulerAppenderINFO
#also exist schedulerAppenderDEBUG that display method name
log4j.logger.proactive.scheduler.core=INFO
log4j.logger.proactive.scheduler.database=INFO
log4j.logger.proactive.scheduler.util=INFO
log4j.logger.proactive.scheduler.frontend=INFO
log4j.logger.proactive.scheduler.connection=INFO
log4j.logger.proactive.scheduler.factory=INFO
log4j.logger.proactive.scheduler.RM.proxy=INFO
log4j.logger.proactive.scheduler.ext=INFO
#log4j.logger.proactive.scheduler.ext.matlab=DEBUG
#log4j.logger.proactive.scheduler.ext.scilab=DEBUG

#avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.resourceManager=false
#define RESOURCE MANAGER loggers
log4j.logger.proactive.resourceManager=INFO,resourceManagerAppender



# Appender FILE writes to the file "tests.log".
log4j.appender.FILE=org.apache.log4j.FileAppender
log4j.appender.FILE.File=tests.log
# the following recreates a file for each run
log4j.appender.FILE.Append=false
# Appender FILE uses the PatternLayout.
log4j.appender.FILE.layout=org.apache.log4j.PatternLayout
# %X{hostname} adds the hostname
# %X{runtime} adds the runtime url
log4j.appender.FILE.layout.ConversionPattern=%5p [%t]: %m%n


#CONSOLE uses PatternLayout
#and displays the associated message (%m)
#using the platform dependant separator (%n)
#Use %M for method names, 
#%X{hostname} for hostname and %X{runtime} for runtime url
#see log4j documentation for details
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
# %X{hostname} adds the hostname
# %X{runtime} adds the runtime url
#log4j.appender.CONSOLE.layout.ConversionPattern=%n%X{runtime} - [%20.20c{2}] %m
log4j.appender.CONSOLE.layout.ConversionPattern=%m %n


#SCHEDULER Appender configuration
log4j.appender.schedulerAppenderINFO=org.apache.log4j.ConsoleAppender
#Layout definition
log4j.appender.schedulerAppenderINFO.layout=org.apache.log4j.PatternLayout
#Pattern display
log4j.appender.schedulerAppenderINFO.layout.ConversionPattern=[SCHEDULER.%C{1}] %m%n

log4j.appender.schedulerAppenderDEBUG=org.apache.log4j.ConsoleAppender
#Layout definition
log4j.appender.schedulerAppenderDEBUG.layout=org.apache.log4j.PatternLayout
#Pattern display
log4j.appender.schedulerAppenderDEBUG.layout.ConversionPattern=[SCHEDULER.%C{1}.%M] %m%n


#SCHEDULER Appender configuration
log4j.appender.resourceManagerAppender=org.apache.log4j.ConsoleAppender
#Layout definition
log4j.appender.resourceManagerAppender.layout=org.apache.log4j.PatternLayout
#Pattern display
log4j.appender.resourceManagerAppender.layout.ConversionPattern=[RESOURCE_MANAGER.%C{1}] %m%n
