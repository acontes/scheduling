# Default: INFO level, RM file appender
log4j.rootLogger=INFO, RM

# Everything from RM has level DEBUG...
log4j.logger.proactive.resourceManager=DEBUG

# ...except statistics and database
log4j.logger.proactive.resourceManager.statistics=INFO
log4j.logger.proactive.resourceManager.database=INFO

# ... and rmlauncher and consol. These additionaly go to the CONSOLE
# appender
log4j.logger.proactive.resourceManager.rmlauncher=INFO, CONSOLE
log4j.logger.proactive.resourceManager.consol=INFO, CONSOLE

#log4j.logger.proactive.resourceManager.core=INFO
#log4j.logger.proactive.resourceManager.user=INFO
#log4j.logger.proactive.resourceManager.monitoring=INFO
#log4j.logger.proactive.resourceManager.nodeSource=INFO
#log4j.logger.proactive.resourceManager.rmnode=INFO
#log4j.logger.proactive.resourceManager.rmfactory=INFO
#log4j.logger.proactive.resourceManager.policy=INFO

# silence c3p0
log4j.logger.com.mchange=WARN

# RM file appender
log4j.appender.RM=org.apache.log4j.RollingFileAppender
log4j.appender.RM.File=${pa.rm.home}/.logs/RM.log
log4j.appender.RM.MaxFileSize=100MB
log4j.appender.RM.MaxBackupIndex=10
log4j.appender.RM.layout=org.apache.log4j.PatternLayout
log4j.appender.RM.layout.ConversionPattern=[%d{ISO8601} %-5p] [RM.%C{1}.%M] %m%n

# CONSOLE appender
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout

