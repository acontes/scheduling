# Default: INFO level, SCHEDULER file appender
log4j.rootLogger=INFO, SCHEDULER

# Everything from Scheduler has level DEBUG...
log4j.logger.proactive.scheduler=DEBUG

# ...except statistics and database
log4j.logger.proactive.scheduler.dev.database=INFO
log4j.logger.proactive.scheduler.dev.admin.statistics=INFO

# ... and consol. It additionaly goes to the CONSOLE appender
log4j.logger.proactive.scheduler.dev.admin.consol=INFO, CONSOLE

