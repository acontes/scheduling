# This file represents the log4j config file for nodes deployed from Resource Manager.
# It is given as property in the default GCMA (config/deployment/GCMNodeSourceApplication.xml)

# The default logging level is INFO
# The root logger logs in console by default

log4j.rootLogger=INFO,schedulerAppenderINFO

# avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.scheduler=false
log4j.additivity.proactive.scheduler.dev=false
log4j.additivity.proactive.scheduler.dev.admin=true

# avoid displaying additivity of the inherit loggers
log4j.additivity.proactive.resourceManager=false

#log4j.logger.proactive.scheduler.dev.dataspace=DEBUG

# CONSOLE uses PatternLayout
log4j.appender.CONSOLE=org.apache.log4j.ConsoleAppender
log4j.appender.CONSOLE.layout=org.apache.log4j.PatternLayout
log4j.appender.CONSOLE.layout.ConversionPattern=%m%n

# SCHEDULER Appender configuration (CONSOLE)
log4j.appender.schedulerAppenderINFO=org.apache.log4j.ConsoleAppender
log4j.appender.schedulerAppenderINFO.layout=org.apache.log4j.PatternLayout
log4j.appender.schedulerAppenderINFO.layout.ConversionPattern=[%-5p] [%C{1}] %m%n
log4j.appender.schedulerAppenderDEBUG=org.apache.log4j.ConsoleAppender
log4j.appender.schedulerAppenderDEBUG.layout=org.apache.log4j.PatternLayout
log4j.appender.schedulerAppenderDEBUG.layout.ConversionPattern=[%-5p] [%C{1}.%M] %m%n
