<?xml version="1.0" encoding="UTF-8"?>
<project name="An Infrastructure Manager for ProActive" basedir="../../../../../../../compile/">

	<import file="${basedir}/build.xml" />
	<target name="compile" depends="core,-compile"/>

	<target name="-compile">
		<if>
			<bool>
				<contains string="${java.version}" substring="1.5"/>
			</bool>
			<echo>Infrastructure Manager requires Java 6 or newer ; Skipping Infrastructure Manager compilation...</echo>
			<else>
				<compile_extra module="infrastructuremanager" />
			</else>
		</if>
	</target>
</project>
