<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 ../src/Extra/org/objectweb/proactive/extensions/gcmdeployment/schema/ApplicationDescriptorSchema.xsd">

	<environment>
		<javaPropertyVariable name="proactive.home" />
		<javaPropertyVariable name="user.dir" />
	</environment>


	<application>
		<proactive base="root" relpath="${proactive.home}">
			<configuration>
				<java base="root" relpath="${java.home}/bin/java"/> 		
				<jvmarg value="-Dproactive.test=true -Dclover.initstring=${proactive.home}/compile/ProActiveCoverage.db"/>
				<proactiveClasspath type="append">
					<pathElement base="proactive" relpath="classes/Tests"/>
					<pathElement base="proactive" relpath="dist/lib/clover.jar"/>
				</proactiveClasspath>					
			</configuration> 
			<virtualNode id="VN1" capacity="1">
				<nodeProvider refid="main" />
			</virtualNode>
			<virtualNode id="VN2" capacity="1">
				<nodeProvider refid="main" />
			</virtualNode>
			<virtualNode id="VN3" capacity="2">
				<nodeProvider refid="main" />
			</virtualNode>

		</proactive>
	</application>

	<resources>
		<nodeProvider id="main">
			<file path="deploymentDescriptorLocal.xml" />
		</nodeProvider>
	</resources>
</GCMApplication>
