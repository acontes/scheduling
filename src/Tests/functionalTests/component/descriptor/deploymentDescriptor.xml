<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns="urn:proactive:deployment:3.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:proactive:deployment:3.3 http://www-sop.inria.fr/oasis/ProActive/schemas/deployment/3.3/deployment.xsd">
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="VN1"/>
			<virtualNode name="VN2"/>
			<virtualNode name="VN3"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="VN1">
				<jvmSet>
					<vmName value="Jvm1-AC"/>
				</jvmSet>
			</map>
			<map virtualNode="VN2">
				<jvmSet>
					<vmName value="Jvm2-AC"/>
				</jvmSet>
			</map>
			<map virtualNode="VN3">
				<jvmSet>
					<vmName value="Jvm3-AC"/>
					<vmName value="Jvm4-AC"/>
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="Jvm1-AC">
				<creation>
					<processReference refid="linuxJVM-AC"/>
				</creation>
			</jvm>
			<jvm name="Jvm2-AC">
				<creation>
					<!--<processReference refid="rshProcess-AC"/>-->
					<processReference refid="linuxJVM-AC"/>
				</creation>
			</jvm>
			<jvm name="Jvm3-AC">
				<creation>
					<processReference refid="linuxJVM-AC"/>
				</creation>
			</jvm>
			<jvm name="Jvm4-AC">
				<creation>
					<!--<processReference refid="rshProcess-AC"/>-->
					<processReference refid="linuxJVM-AC"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="linuxJVM">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<jvmParameters>
						<parameter value="-Dproactive.test=true"/>
					</jvmParameters>
					</jvmProcess>
			</processDefinition>
			<processDefinition id="linuxJVM-AC">
				<jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<jvmParameters>
						<parameter value="-Dproactive.future.ac=true"/>
						<parameter value="-Dproactive.test=true"/>
					</jvmParameters>
				</jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
