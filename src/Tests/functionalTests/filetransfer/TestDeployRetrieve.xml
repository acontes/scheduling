<?xml version="1.0" encoding="UTF-8"?>
<!--  ProActiveDescriptor xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../../descriptors/DescriptorSchema.xsd"-->
<ProActiveDescriptor
	xmlns="urn:proactive:deployment:3.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:proactive:deployment:3.3 http://www-sop.inria.fr/oasis/ProActive/schemas/deployment/3.3/deployment.xsd">
	<variables>
		<descriptorVariable name="PROACTIVE_HOME"
			value="/user/mleyton/home/ProActive" />
		<javaPropertyVariable name="java.home"/>
		<descriptorDefaultVariable name="JVM_PROCESS" value="localJVM" />
		<descriptorDefaultVariable name="HOST_NAME" value="localhost" />
	</variables>
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="test" fileTransferDeploy="testDeploy"
				fileTransferRetrieve="testRetrieve" />
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="test">
				<jvmSet>
					<vmName value="sshJVMNode" />
				</jvmSet>
			</map>
		</mapping>
		<jvms>
			<jvm name="JvmNode">
				<creation>
					<processReference refid="localJVM" />
				</creation>
			</jvm>
			<jvm name="sshJVMNode">
				<creation>
					<processReference refid="sshProcess" />
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<fileTransferDefinitions>
		<fileTransfer id="testRetrieve">
			<file src="ProActiveTestFile.dat"
				dest="ProActiveTestFileRetrieved.dat" />
			<file src="ProActiveTestFile.dat"
				dest="ProActiveTestFileRetrieved2.dat" />
		</fileTransfer>
		<fileTransfer id="testDeploy">
			<file src="ProActiveTestFile.dat"
				dest="ProActiveTestFileDeployed.dat" />
			<file src="ProActiveTestFile.dat"
				dest="ProActiveTestFileDeployed2.dat" />
		</fileTransfer>
	</fileTransferDefinitions>
	<infrastructure>
		<processes>
			<processDefinition id="sshProcess">
				<sshProcess
					class="org.objectweb.proactive.core.process.ssh.SSHProcess"
					hostname="${HOST_NAME}">
					<processReference refid="${JVM_PROCESS}" />
					<!--localJVM  changed to remoteJVM when testing from eclipse to avoid "Word to long" error -->
					<fileTransferDeploy refid="implicit">
						<copyProtocol>rcp,pftp</copyProtocol>
						<sourceInfo prefix="/tmp" />
						<destinationInfo prefix="/tmp" />
					</fileTransferDeploy>
					<fileTransferRetrieve refid="implicit">
						<sourceInfo prefix="/tmp" />
						<destinationInfo prefix="/tmp" />
					</fileTransferRetrieve>
				</sshProcess>
			</processDefinition>
			<processDefinition id="remoteJVM">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<!-- javaPath><absolutePath value="${java.home}/bin/java"/></javaPath-->
					<classpath>
						<absolutePath
							value="${PROACTIVE_HOME}/lib/ProActive.jar" />
						<absolutePath
							value="${PROACTIVE_HOME}/lib/*" />
					</classpath>
					<log4jpropertiesFile>
						<absolutePath
							value="${PROACTIVE_HOME}/compile/proactive-log4j" />
					</log4jpropertiesFile>
					<policyFile>
						<absolutePath
							value="${PROACTIVE_HOME}/scripts/proactive.java.policy" />
					</policyFile>
					<jvmParameters>
						<parameter value="-Dproactive.test=true"/>
					</jvmParameters>
				</jvmProcess>
			</processDefinition>
			<processDefinition id="localJVM">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<jvmParameters>
						<parameter value="-Dproactive.test=true"/>
					</jvmParameters>
				</jvmProcess>
			</processDefinition>
		</processes>
	</infrastructure>
</ProActiveDescriptor>
