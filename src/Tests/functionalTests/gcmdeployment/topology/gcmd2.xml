<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment 
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ExtensionSchemas.xsd	">
		
	<environment>
		<javaPropertyVariable name="user.home"/>
	</environment>
	
	<resources>
		<bridge refid="bridge1">
			<bridge refid="bridge2">
				<bridge refid="bridge3">
					<group refid="group3">
						<host refid="host3"/>
					</group>
				</bridge>
				<host refid="host2" />
			</bridge>
		</bridge>         
	</resources>

	<infrastructure>
		
		<hosts>
			<host id="host2" os="unix" hostCapacity="1" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.home}"/>				
			</host>
		
			<host id="host3" os="unix" hostCapacity="1" vmCapacity="1">
				<homeDirectory base="root" relpath="${user.home}"/>				
			</host>
		</hosts>
	
		<bridges>
			<sshBridge
				id="bridge1"
				hostname="localhost"
				commandOptions="-2" />

			<sshBridge
				id="bridge2"
				hostname="localhost"
				commandOptions="-2" />
				
			<sshBridge
				id="bridge3"
				hostname="localhost"
				commandOptions="-2" />
				
		</bridges>
		
		<groups>
			<sshGroup
				id="group3"
				hostList="localhost localhost"/>
		</groups>
		
	</infrastructure>
</GCMDeployment>