<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment 
	xmlns="urn:gcm:deployment:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:deployment:1.0 /user/cmathieu/home/TMP/junit/src/Extra/org/objectweb/proactive/extra/gcmdeployment/schema/ExtensionSchemas.xsd	">
	
	<environment>
		<javaPropertyVariable name="user.home"/>
	</environment>
	
	<resources>
	                    
		<bridge refid="bLocalhost10">
			<host refid="hLocalhost10"/>
		</bridge>
	</resources>

	<infrastructure>
		
		<hosts>
			<host id="hLocalhost10" os="unix" hostCapacity="1" vmCapacity="10">
				<homeDirectory base="root" relpath="${user.home}"/>				
			</host>
		</hosts>

		<bridges>
			<sshBridge
				id="bLocalhost10"
				hostname="localhost"
				commandOptions="-2" />
		</bridges>
	</infrastructure>
</GCMDeployment>