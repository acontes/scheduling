<?xml version="1.0" encoding="UTF-8"?>
<GCMApplication
	xmlns="urn:gcm:application:1.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:gcm:application:1.0 http://proactive.inria.fr/schemas/gcm/1.0/ApplicationDescriptorSchema.xsd">

	<environment>
		<programVariable name="forcedFromDesc" value=""/>
	</environment>
	
	<application>	
		<proactive relpath="${forcedFromDesc}" base="root">
			<configuration>
				<jvmarg value="-Dproactive.test=true"/>
			</configuration>
			
			<virtualNode id="nodes"/>
		</proactive>
	</application>

	<resources/>	
</GCMApplication>
