<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns="urn:proactive:deployment:3.3" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="urn:proactive:deployment:3.3 http://www-sop.inria.fr/oasis/ProActive/schemas/deployment/3.3/deployment.xsd">
	<mainDefinition id="main" class="functionalTests.descriptor.launcher.A">
		<mapToVirtualNode value="lVNmain"/>
	</mainDefinition>
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="lVNmain"/>
			<virtualNode name="lVN1"/>
			<virtualNode name="lVN2"/>
		</virtualNodesDefinition>
	</componentDefinition>
	<deployment>
		<mapping>
			<map virtualNode="lVNmain">
				<jvmSet>
					<vmName value="JvmMain"/>
				</jvmSet>
			</map>
			<map virtualNode="lVN1">
				<jvmSet>
					<vmName value="Jvm1"/>
				</jvmSet>
			</map>
			<map virtualNode="lVN2">
				<jvmSet>
					<vmName value="Jvm2"/>
				</jvmSet>
			</map>						
		</mapping>
		<jvms>
			<jvm name="JvmMain">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm1">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
			<jvm name="Jvm2">
				<creation>
					<processReference refid="localJVM"/>
				</creation>
			</jvm>
		</jvms>
	</deployment>
	<infrastructure>
		<processes>
			<processDefinition id="localJVM">				
			  <jvmProcess class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<jvmParameters>
						<parameter value="-Dproactive.future.ac=true"/>
						<parameter value="-Dproactive.communication.protocol=ibis"/>
						<parameter value="-Dibis.serialization=ibis"/>
						<parameter value="-Dibis.name_server.host=localhost"/>
						<parameter value="-Dibis.name_server.pool=rutget"/>
						<parameter value="-Dibis.name_server.key=12"/>
						<parameter value="-Dproactive.test=true"/>
					</jvmParameters>
				</jvmProcess>					
			</processDefinition>
			
		</processes>
	</infrastructure>
</ProActiveDescriptor>
