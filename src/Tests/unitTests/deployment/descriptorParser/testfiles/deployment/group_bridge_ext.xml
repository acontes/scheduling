<?xml version="1.0" encoding="UTF-8"?>
<GCMDeployment
	xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas/DeploymentDescriptorSchema"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:paext="http://www-sop.inria.fr/oasis/ProActive/schemas/DeploymentDescriptorSchemaExtension"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas/DeploymentDescriptorSchema ../../../../../Extra/org/objectweb/proactive/extra/gcmdeployment/schema/DeploymentDescriptorSchema.xsd
	http://www-sop.inria.fr/oasis/ProActive/schemas/DeploymentDescriptorSchemaExtension ../../../../../Extra/org/objectweb/proactive/extra/gcmdeployment/schema/SampleDeploymentExtension.xsd">

	<environment>
		<descriptorVariable name="USERNAME" value="cmathieu" />
	</environment>

	<resources>
		<group refid="gINRIAEXT">
			<host refid="hSchubby" />
		</group>
	</resources>

	<infrastructure>
		<hosts>
			<host id="hSchubby" os="unix" hostCapacity="1"
				vmCapacity="1">
				<homeDirectory>/user/cmathieu/home</homeDirectory>
			</host>
		</hosts>

		<groups>
			<paext:myGroup id="gINRIAEXT" someattr="foobar"></paext:myGroup>
		</groups>

		<bridges>
			<paext:myBridge id="bINRIAEXT" someattr="somevalue" />
		</bridges>
	</infrastructure>
</GCMDeployment>