<?xml version="1.0" encoding="UTF-8"?>

<GCMApplication
	xmlns="http://www-sop.inria.fr/oasis/ProActive/schemas"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www-sop.inria.fr/oasis/ProActive/schemas ../../../../../Extra/org/objectweb/proactive/extra/gcmdeployment/schema/ApplicationDescriptorSchema.xsd">

	<!-- Regle integrite:
		- un fichier ne peut se trouver que dans un seul bloc resourceAcquisition
		- un virtual node peut referencer plusieurs RA
		Avant d'activer un RA
	-->

	<application>
		<proactive>
			<virtualNode id="master" capacity="1">
				<nodeProvider refid="INRIA_LAN" />
			</virtualNode>

			<virtualNode id="slaves" capacity="max">
				<nodeProvider refid="INRIA_LAN" />
				<nodeProvider refid="INRIA_CLUSTERS" />
			</virtualNode>

			<virtualNode id="slaves2" capacity="max">
				<nodeProvider refid="INRIA_LAN" />
				<nodeProvider refid="INRIA_CLUSTERS" />
			</virtualNode>

		</proactive>
	</application>

	<resources>
		<nodeProvider id="INRIA_CLUSTERS">
			<file path="deployment2.xml" />
			<file path="deployment3.xml" />
		</nodeProvider>

		<nodeProvider id="INRIA_LAN">
			<file path="deployment.xml" />
		</nodeProvider>
	</resources>

</GCMApplication>
