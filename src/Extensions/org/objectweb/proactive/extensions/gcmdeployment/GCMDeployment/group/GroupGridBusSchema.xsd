			<xs:extension base="abstractGroupSchedulerElementType">
				<xs:sequence>
					<xs:element name="arguments" type="argumentListType" minOccurs="0" />
				</xs:sequence>
			</xs:extension>
		</xs:complexContent>
	</xs:complexType>

	<xs:element name="gridbusGroup" type="gridbusProcessType" substitutionGroup="abstractShElement"/>

</xs:schema>