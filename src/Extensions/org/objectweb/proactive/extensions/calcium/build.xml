<?xml version="1.0" encoding="UTF-8"?>
<project name="Calcium for ProActive" basedir="../../../../../../../compile/">
	
	<import file="${basedir}/build.xml" />
	<target name="compile" depends="core, stubGenerator, -compile"/>
	
	<target name="-compile">
		
		<compile_extension module="calcium" />
		
		<echo>Compiling stubs for Calcium</echo>
		<java classname="${stubgenerator.class}" fork="true">
			<classpath refid="project.classpath" />
			<arg line="-srcDir ${cl.extensions.dir} -pkg org.objectweb.proactive.extensions.calcium.task -class Task" />
		</java>
	    <java classname="${stubgenerator.class}" fork="true">
		    <classpath refid="project.classpath" />
		    <arg line="-srcDir ${cl.extensions.dir} -pkg org.objectweb.proactive.extensions.calcium.environment.proactive" />
	    </java>
	</target>
</project>
