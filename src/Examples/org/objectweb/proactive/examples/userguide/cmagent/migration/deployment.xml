<?xml version="1.0" encoding="UTF-8"?>
<ProActiveDescriptor xmlns="urn:proactive:deployment:3.3"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="urn:proactive:deployment:3.3 http://www-sop.inria.fr/oasis/ProActive/schemas/deployment/3.3/deployment.xsd">
	<!-- VARIABLES DEFINITION -->
	<variables>
		<!-- LOCAL PATHS -->
		<descriptorVariable name="PROACTIVE_HOME"
			value="/user/vjuresch/home/workspace/ProActive" />
		<descriptorVariable name="JAVA_HOME"
			value="/user/vjuresch/home/work/jdk1.6.0_02" />
		<!-- REMOTE PATHS -->
		<descriptorVariable name="REMOTE_PROACTIVE_HOME"
			value="/user/vjuresch/home/workspace/ProActive" />
		<descriptorVariable name="REMOTE_JAVA_HOME"
			value="/user/vjuresch/home/work/jdk1.6.0_02" />
	</variables>
	<!-- VIRTUAL NODES DEFINITION -->
	<componentDefinition>
		<virtualNodesDefinition>
			<virtualNode name="remoteNode" property="multiple" />
		</virtualNodesDefinition>
	</componentDefinition>
	<!-- @snippet-start jvm_definition  -->
	<!-- JVMS MAPPING AND CREATION -->
	<deployment>
		<!-- MAPPING -->
		<mapping>
			<map virtualNode="remoteNode">
				<jvmSet>
				
					<vmName value="JVM1" />
					<vmName value="JVM2" />
					<vmName value="JVM3" />
					<vmName value="JVM4" />
					<vmName value="JVM5" />
					
				</jvmSet>
			</map>
		</mapping>
		<!-- CREATION -->
		<jvms>
			<jvm name="JVM1">
				<creation>
					<processReference refid="rsh_cheypa" />
				</creation>
			</jvm>
			<jvm name="JVM2">
				<creation>
					<processReference refid="rsh_predadab" />
				</creation>
			</jvm>
			<jvm name="JVM3">
				<creation>
					<processReference refid="rsh_amda" />
				</creation>
			</jvm>
			<jvm name="JVM4">
				<creation>
					<processReference refid="rsh_bebita" />
				</creation>
			</jvm>
			<jvm name="JVM5">
				<creation>
					<processReference refid="rsh_bebita" />
				</creation>
			</jvm>
			
		</jvms>
	</deployment>
	<!-- @snippet-end jvm_definition  -->
	<!-- @snippet-start infrastructure_definition  -->
	<!-- INFRASTRUCTURE SPECIFICATION -->
	<infrastructure>
		<processes>
			<!-- SPECIFICATION FOR THE REMOTE INFRASTRUCTURE -->
			<processDefinition id="genericRemoteJVM">
				<jvmProcess
					class="org.objectweb.proactive.core.process.JVMNodeProcess">
					<classpath>
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/dist/lib/ProActive.jar" />
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/lib/bouncycastle.jar" />
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/lib/fractal.jar" />
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/lib/ganymed-ssh2-build210.jar" />
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/lib/javassist.jar" />
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/lib/log4j.jar" />
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/lib/xercesImpl.jar" />
					</classpath>
					<javaPath>
						<absolutePath
							value="${REMOTE_JAVA_HOME}/bin/java" />
					</javaPath>
					<policyFile>
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/scripts/proactive.java.policy" />
					</policyFile>
					<log4jpropertiesFile>
						<absolutePath
							value="${REMOTE_PROACTIVE_HOME}/compile/proactive-log4j" />
					</log4jpropertiesFile>
				</jvmProcess>
			</processDefinition>
			<!-- HOST AND PROTOCOL DEFINITION -->
			<processDefinition id="rsh_cheypa">
				<rshProcess
					class="org.objectweb.proactive.core.process.rsh.RSHProcess"
					hostname="cheypa.inria.fr">
					<processReference refid="genericRemoteJVM" />
				</rshProcess>
			</processDefinition>
			
			<processDefinition id="rsh_orchidee">
				<rshProcess
					class="org.objectweb.proactive.core.process.rsh.RSHProcess"
					hostname="cheypa.inria.fr">
					<processReference refid="genericRemoteJVM" />
				</rshProcess>
			</processDefinition>
			
			<processDefinition id="rsh_predadab">
				<rshProcess
					class="org.objectweb.proactive.core.process.rsh.RSHProcess"
					hostname="predadab.inria.fr">
					<processReference refid="genericRemoteJVM" />
				</rshProcess>
			</processDefinition>
			
			<processDefinition id="rsh_bebita">
				<rshProcess
					class="org.objectweb.proactive.core.process.rsh.RSHProcess"
					hostname="bebita.inria.fr">
					<processReference refid="genericRemoteJVM" />
				</rshProcess>
			</processDefinition>

			<processDefinition id="rsh_amda">
				<rshProcess
					class="org.objectweb.proactive.core.process.rsh.RSHProcess"
					hostname="amda.inria.fr">
					<processReference refid="genericRemoteJVM" />
				</rshProcess>
			</processDefinition>
			
		</processes>
	</infrastructure>
	<!-- @snippet-end infrastructure_definition  -->
</ProActiveDescriptor>
